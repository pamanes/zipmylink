@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
<environment include="Development">
    <script type="text/javascript" src="~/js/regex-weburl.js"></script>
    <script type="text/javascript" src="~/js/home.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/regex-weburl.min.js"></script>
    <script src="~/js/home.min.js"></script>
</environment>
}
<div style="display: none;" data-bind="visible: true">
    <div class="text-center">
        <h1 class="display-6">Welcome to yet another URL Shortener</h1>
    </div>
    <div class="form-group">
        <form id="urlForm" data-bind="submit: addUrl" asp-antiforgery="true" method="post">
            <div>
                <label id="errorPlaceholder" style="visibility: hidden;">error</label>
                <div class="errDiv text-danger">
                </div>
            </div>
            <div class="input-group mb-3">
                <input id="hidUrl" type="hidden" data-bind="value: newUrlText" />
                <input id="txtUrl" name="txtUrlName" data-min="8" type="text" class="form-control" placeholder="Enter link" required>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary" style="width:80px;" value="Zip!">Add</button>
                </div>
            </div>
        </form>
    </div>
    <div data-bind="foreach: urls.slice(0).reverse(), visible: urls().length > 0">
        <div class="input-group mb-3">
            <input type="text" class="form-control" data-bind="value: $data">
            <div class="input-group-append">
                <input type="button" data-bind="click: function (data) { cpToClip(data); }" class="btn btn-success" style="width:80px;" value="Copy!" />
            </div>
        </div>
    </div>
    @*
        @ViewData["host"]
        @ViewData["result"]
        @ViewData["connectionString"]
    *@
</div>